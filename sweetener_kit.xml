    <authorUrl>https://webmasterskaya.xyz</authorUrl>
    <version>__DEPLOYMENT_VERSION__</version>
    <description>PLG_JSHOPPING_SWEETENER_KIT_DESCRIPTION</description>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_jshopping_sweetener_kit.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_jshopping_sweetener_kit.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_jshopping_sweetener_kit.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_jshopping_sweetener_kit.sys.ini</language>
    </languages>
    <files>
        <filename plugin="sweetener_kit">sweetener_kit.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="load_jquery_chosen_admin"
                       type="radio"
                       label="PLG_JSHOPPING_SWEETENER_KIT_LOAD_JQUERY_CHOSEN_ADMIN"
                       class="btn-group btn-group-yesno"
                       default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_prods_from_subcategories"
                       type="radio"
                       label="PLG_JSHOPPING_SWEETENER_KIT_SHOW_PRODS_FROM_SUBCATEGORIES"
                       class="btn-group btn-group-yesno"
                       default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="jshopping-sweetener-kit">
            https://site.com/update?extension=plg_jshopping_sweetener_kit
        </server>
    </updateservers>
</extension>